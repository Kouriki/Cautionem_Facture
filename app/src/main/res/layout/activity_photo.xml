<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="match_parent"
    tools:context=".Photo_Activity">

    <androidx.cardview.widget.CardView
        android:elevation="5dp"
        app:cardCornerRadius="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioGroup
            android:id="@+id/radioGroup"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <RadioButton
                android:id="@+id/profil1"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:checked="true"
                android:onClick="onAlignmentSelected"
                android:background="@drawable/alignment_selector"
                android:button="@drawable/profil1"/>

            <RadioButton
                android:id="@+id/profil2"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:background="@drawable/alignment_selector"
                android:button="@drawable/profil2"
                android:onClick="onAlignmentSelected"
                tools:ignore="DuplicateSpeakableTextCheck" />

            <RadioButton
                android:id="@+id/profil3"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:background="@drawable/alignment_selector"
                android:button="@drawable/profil3"
                android:onClick="onAlignmentSelected" />

            <RadioButton
                android:id="@+id/profil4"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:background="@drawable/alignment_selector"
                android:button="@drawable/profil4"
                android:onClick="onAlignmentSelected" />

            <RadioButton
                android:id="@+id/profil5"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:background="@drawable/alignment_selector"
                android:button="@drawable/profil5"
                android:onClick="onAlignmentSelected" />

            <RadioButton
                android:id="@+id/profil6"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:background="@drawable/alignment_selector"
                android:button="@drawable/profil6"
                android:onClick="onAlignmentSelected" />

            <RadioButton
                android:id="@+id/profil7"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:background="@drawable/alignment_selector"
                android:button="@drawable/profil7"
                android:onClick="onAlignmentSelected" />

            <RadioButton
                android:id="@+id/profil8"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:background="@drawable/alignment_selector"
                android:button="@drawable/profil8"
                android:onClick="onAlignmentSelected" />


        </RadioGroup>

    </androidx.cardview.widget.CardView>

</LinearLayout>